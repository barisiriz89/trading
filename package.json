{
  "name": "trading-platform",
  "private": true,
  "workspaces": [
    "packages/*",
    "services/*"
  ],
  "scripts": {
    "install:all": "npm install",
    "test": "npm --workspaces --if-present run test",
    "lint": "npm --workspaces --if-present run lint",
    "poly:dev": "npm --workspace services/polymarket-bot run dev",
    "poly:tick": "npm --workspace services/polymarket-bot run tick",
    "poly:test": "npm --workspace services/polymarket-bot run poly:test",
    "poly:smoke": "./scripts/poly_smoke.sh",
    "poly:deploy": "./scripts/poly_deploy.sh",
    "poly:cloud-smoke": "./scripts/poly_cloud_smoke.sh",
    "poly:scheduler-smoke": "./scripts/poly_scheduler_smoke.sh",
    "poly:live-smoke": "./scripts/poly_live_smoke.sh"
  }
}
